# SendGrid Configuration (Required)
# Get your API key from https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Email address to send FROM (must be verified in SendGrid)
SENDGRID_FROM=noreply@yourdomain.com

# Email address to send contact form submissions TO
CONTACT_TO=contact@yourdomain.com

# reCAPTCHA v3 Configuration (Optional)
# Get your keys from https://www.google.com/recaptcha/admin
# Leave empty to disable reCAPTCHA verification
RECAPTCHA_SECRET=

# Rate Limiting Configuration (Optional)
# Maximum number of requests per time window
RATE_LIMIT_MAX=5

# Time window in minutes for rate limiting
RATE_LIMIT_WINDOW_MIN=60
